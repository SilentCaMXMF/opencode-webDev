# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=frontend_design_monitoring
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Connection Pool
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Metrics Collector Configuration
PORT=3000
NODE_ENV=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Data Retention
DATA_RETENTION_DAYS=90

# WebSocket Settings
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30000

# Email Notifications (Optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-specific-password
EMAIL_TO=team@example.com,alerts@example.com
EMAIL_FROM=monitoring@example.com

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alerting Configuration
ALERT_COOLDOWN_SECONDS=300

# Dashboard Configuration
NEXT_PUBLIC_COLLECTOR_URL=http://localhost:3000
NEXT_PUBLIC_REFRESH_INTERVAL=5000
NEXT_PUBLIC_MAX_DATA_POINTS=100

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/collector.log
